---
const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <link rel="stylesheet" href="/estilos.css" />
  </head>
  <body>
    <div class="dashboard-layout">
      <aside class="sidebar">
        <header>
          <div class="logo">
            <a href="/dashboard">
              <img src="/imagenes/poli.png" alt="Logo" />
            </a>
          </div>
        </header>
        <nav>
          <a href="/dashboard" class="active">Dashboard</a>
          <a href="/dashboard/servicios">Servicios</a>
          <a href="/" class="logout-button" style="text-decoration: none;"
            >Cerrar sesi√≥n</a
          >
        </nav>
      </aside>
      <main class="main-content">
        <slot />
      </main>
    </div>
    <style>
      .logout-button {
        all: unset;
        cursor: pointer;
        width: 100%;
        padding: 10px 15px; /* Example padding */
        box-sizing: border-box;
        display: block;
        font-family: inherit;
        font-size: inherit;
        color: inherit;
      }
      .logout-button:hover {
        background-color: rgba(0, 0, 0, 0.05); /* Example hover */
      }
      .sidebar nav a {
        display: block;
        padding: 10px 15px;
        text-decoration: none;
        color: #333;
        border-radius: 6px;
        margin: 2px 10px;
        transition: all 0.2s ease;
      }

      .sidebar nav a:hover {
        background-color: rgba(255, 143, 0, 0.1);
        color: var(--color-principal);
      }

      .sidebar nav a.active {
        background-color: var(--color-principal);
        color: white;
        font-weight: 500;
      }
    </style>
  </body>
</html>
